{
  "name": "minutes-to-actions",
  "version": "0.1.0",
  "private": true,
  "description": "Paste meeting notes, extract action-items, manage them on a Kanban board",
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "predev": "lsof -ti:3000 | xargs kill -9 2>/dev/null || true && node -e \"try { require(require.resolve('@prisma/client', { paths: [process.cwd() + '/apps/api'] })) } catch { process.exit(1) }\" || pnpm db:generate",
    "dev": "pnpm run --parallel --filter './apps/*' dev",
    "build": "pnpm run --filter './packages/*' build && pnpm run --filter './apps/*' build",
    "test": "pnpm run --recursive test",
    "test:api": "vitest run --config tests/vitest.config.ts",
    "test:api:watch": "vitest --config tests/vitest.config.ts",
    "test:api:report": "vitest run --config tests/vitest.config.ts --reporter=default --reporter=json --reporter=junit --outputFile.json=../api-test-results/results.json --outputFile.junit=../api-test-results/results.xml",
    "test:api:ui": "vitest --config tests/vitest.config.ts --ui",
    "test:api:coverage": "vitest run --config tests/vitest.config.ts --coverage",
    "test:api:html": "vitest run --config tests/vitest.config.ts --reporter=default --reporter=./tests/reporters/http-html-reporter.ts",
    "test:e2e": "playwright test --project=chromium",
    "test:e2e:all": "playwright test",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:e2e:mobile": "playwright test --project=mobile-chrome",
    "test:e2e:ui": "playwright test --project=chromium --ui",
    "test:e2e:headed": "playwright test --project=chromium --headed",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "typecheck": "pnpm run --recursive typecheck",
    "db:migrate": "pnpm --filter api exec prisma migrate dev",
    "db:studio": "pnpm --filter api exec prisma studio",
    "db:generate": "pnpm --filter api exec prisma generate",
    "db:test:create": "docker exec mta-postgres psql -U postgres -tc \"SELECT 1 FROM pg_database WHERE datname = 'minutes_to_actions_test'\" | grep -q 1 || docker exec mta-postgres psql -U postgres -c \"CREATE DATABASE minutes_to_actions_test\"",
    "db:test:migrate": "DATABASE_URL=\"postgresql://postgres:postgres@localhost:5432/minutes_to_actions_test?schema=public\" pnpm --filter api exec prisma migrate deploy",
    "db:test:setup": "pnpm db:test:create && pnpm db:test:migrate",
    "pretest:api": "pnpm db:test:setup"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.2.0",
    "@playwright/test": "^1.58.1",
    "@types/node": "^20.12.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^1.6.1",
    "@vitest/ui": "^1.6.1",
    "eslint": "^8.57.0",
    "prettier": "^3.2.0",
    "supertest": "^7.2.2",
    "typescript": "^5.4.0",
    "vitest": "^1.4.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
