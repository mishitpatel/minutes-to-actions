{
  "name": "minutes-to-actions",
  "version": "0.1.0",
  "private": true,
  "description": "Paste meeting notes, extract action-items, manage them on a Kanban board",
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "pnpm run --parallel --filter './apps/*' dev",
    "build": "pnpm run --filter './packages/*' build && pnpm run --filter './apps/*' build",
    "test": "pnpm run --recursive test",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "typecheck": "pnpm run --recursive typecheck",
    "db:migrate": "pnpm --filter api exec prisma migrate dev",
    "db:studio": "pnpm --filter api exec prisma studio",
    "db:generate": "pnpm --filter api exec prisma generate"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.0",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
